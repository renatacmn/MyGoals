<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="br.com.mygoals.base.api.models.FeedItem" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/list_item_history_horizontal_padding"
        android:paddingEnd="@dimen/list_item_history_horizontal_padding">

        <TextView
            android:id="@+id/listItemHistoryTextTitle"
            style="@style/TextBody"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/list_item_history_vertical_padding"
            android:layout_marginEnd="@dimen/list_item_history_horizontal_spacing"
            android:layout_marginBottom="@dimen/list_item_history_small_horizontal_spacing"
            android:text="@{item.message}"
            app:layout_constraintBottom_toTopOf="@id/listItemHistoryRule"
            app:layout_constraintEnd_toStartOf="@id/listItemHistoryTextPrice"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="You walked 5 miles" />

        <include
            android:id="@+id/listItemHistoryRule"
            layout="@layout/list_item_rule"
            android:layout_width="@dimen/list_item_history_rule_size"
            android:layout_height="@dimen/list_item_history_rule_size"
            android:layout_marginBottom="@dimen/list_item_history_vertical_padding"
            app:layout_constraintBottom_toTopOf="@id/listItemHistoryDivider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/listItemHistoryTextTitle" />

        <TextView
            android:id="@+id/listItemHistoryTextDate"
            style="@style/ListItemHistoryDateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/list_item_history_small_horizontal_spacing"
            app:layout_constraintBottom_toBottomOf="@id/listItemHistoryRule"
            app:layout_constraintStart_toEndOf="@id/listItemHistoryRule"
            app:layout_constraintTop_toTopOf="@id/listItemHistoryRule"
            tools:text="2h ago" />

        <TextView
            android:id="@+id/listItemHistoryTextPrice"
            style="@style/ListItemHistoryPriceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/price"
            app:layout_constraintBottom_toTopOf="@id/listItemHistoryDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/listItemHistoryDivider"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/divider_height"
            android:background="@color/lightGray3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>